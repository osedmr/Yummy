<!-- res/drawable/wave_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color (light blue gradient) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#80D8FF"
                android:endColor="#0288D1"
                android:angle="270"/>
        </shape>
    </item>

    <!-- First wave -->
    <item android:top="100dp">
        <shape android:shape="rectangle">
            <solid android:color="#4FC3F7" />
            <corners android:topLeftRadius="200dp" android:topRightRadius="200dp"/>
        </shape>
    </item>

    <!-- Second wave -->
    <item android:top="180dp">
        <shape android:shape="rectangle">
            <solid android:color="#039BE5" />
            <corners android:topLeftRadius="150dp" android:topRightRadius="150dp"/>
        </shape>
    </item>

    <!-- Third wave -->
    <item android:top="250dp">
        <shape android:shape="rectangle">
            <solid android:color="#0277BD" />
            <corners android:topLeftRadius="100dp" android:topRightRadius="100dp"/>
        </shape>
    </item>
</layer-list>
